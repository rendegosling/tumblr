  = form_for @post do |f|
    - if @post.errors.any?
      #errors
        h2 = "#{pluralize(@post.errors.count, "error")} stopped this post from saving"
        ul
          - @post.errors.full_messages.each do |error|
            li = error 
    p
      = f.label :title
      br
      = f.text_field :title
    p
      = f.label :body
      br
      = f.trix_editor :body
    p
      = f.submit